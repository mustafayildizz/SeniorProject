<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >

    <EditText
        android:id="@+id/field_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Tarla ismi..."
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:textColor="#fff"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/city"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/city"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:ems="10"
        android:textColor="#fff"
        android:hint="Åžehir..."
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/region_spinner"
        android:layout_alignLeft="@+id/field_name"
        android:layout_alignStart="@+id/field_name" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/region_spinner"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:layout_marginBottom="230dp"
        android:layout_marginLeft="28dp"
        android:layout_alignBottom="@+id/add_field_button"
        android:layout_alignLeft="@+id/city"
        android:layout_alignStart="@+id/city"
        ></Spinner>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/add_field_button"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/sign_up_button"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tarla Ekle"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/sign_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:id="@+id/linearLayout">

    </LinearLayout>
</RelativeLayout>
